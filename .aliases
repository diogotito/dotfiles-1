alias k=kubectl
kubectlgetall() {
	kubectl api-resources --verbs=list --namespaced -o name |
	grep -v events | sort -u |
	parallel kubectl get --all-namespaces --ignore-not-found --show-kind
}
kubectlgetallforns() {
	for ns in $(kubectl get namespaces -o name | cut -d'/' -f2); do
		printf "\n\nNamespace %s ---------------------------------------------------------" "$ns"
		for i in $(kubectl api-resources --verbs=list --namespaced -o name | grep -v "events" | sort -u); do
			echo "Resource: $i"
			kubectl -n "$ns" get --ignore-not-found "$i"
		done
	done
}
